<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show",book_path(book.id) %></td>
        <td><%= link_to "Edit",edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",root_path %></td>
      </tr>
    </tbody>
  <% end %>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  <div><%= f.submit "Create Book" %></div>
  
<% end %>